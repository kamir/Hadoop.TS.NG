<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>opentsx</artifactId>
    <groupId>org.opentsx</groupId>
    <version>3.0.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>opentsx-lg</artifactId>
  <name>opentsx-lg</name>
  <profiles>
    <profile>
      <id>SimpleTimeSeriesProducer</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>3.2.1</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <transformers>
                    <transformer>
                      <mainClass>org.opentsx.lg.TSDataSineWaveGenerator</mainClass>
                    </transformer>
                  </transformers>
                  <filters>
                    <filter>
                      <artifact>*:*</artifact>
                      <excludes>
                        <exclude>META-INF/*.SF</exclude>
                        <exclude>META-INF/*.DSA</exclude>
                        <exclude>META-INF/*.RSA</exclude>
                      </excludes>
                    </filter>
                  </filters>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>Docker</id>
      <build>
        <plugins>
          <plugin>
            <groupId>io.fabric8</groupId>
            <artifactId>docker-maven-plugin</artifactId>
            <version>0.33.0</version>
            <executions>
              <execution>
                <id>start</id>
                <phase>package</phase>
                <goals>
                  <goal>build</goal>
                </goals>
                <configuration>
                  <images>
                    <image>
                      <alias>OpenTSx-DataGenerator</alias>
                      <name>opentsx/time-series-generator:3.0.0</name>
                      <build>
                        <from>confluentinc/cp-base</from>
                        <assembly>
                          <name>opentsx-lg</name>
                          <descriptorRef>artifact</descriptorRef>
                          <inline>
                            <files>
                              <file>
                                <source>/home/ubuntu/OpenTSx/opentsx-lg/target/opentsx-lg-3.0.0.jar</source>
                                <outputDirectory>./</outputDirectory>
                                <destName>opentsx-lg-3.0.0.jar</destName>
                              </file>
                              <file>
                                <source>/home/ubuntu/OpenTSx/opentsx-lg/src/main/resources/config/topiclist.def</source>
                                <outputDirectory>./</outputDirectory>
                                <destName>config/topiclist.def</destName>
                              </file>
                              <file>
                                <source>/home/ubuntu/OpenTSx/opentsx-lg/src/main/resources/config/ccloud.props</source>
                                <outputDirectory>./</outputDirectory>
                                <destName>config/ccloud.props</destName>
                              </file>
                              <file>
                                <source>/home/ubuntu/OpenTSx/opentsx-lg/src/main/resources/config/cpl.props</source>
                                <outputDirectory>./</outputDirectory>
                                <destName>config/cpl.props</destName>
                              </file>
                              <file>
                                <source>/home/ubuntu/OpenTSx/opentsx-lg/src/main/resources/config/mdc_c1.props</source>
                                <outputDirectory>./</outputDirectory>
                                <destName>config/mdc_c1.props</destName>
                              </file>
                            </files>
                          </inline>
                        </assembly>
                        <cmd>
                          <shell>java -jar /opentsx-lg/opentsx-lg-3.0.0.jar</shell>
                        </cmd>
                        <env>
                          <OPENTSX_TOPIC_MAP_FILE_NAME>/opentsx-lg/config/topiclist.def</OPENTSX_TOPIC_MAP_FILE_NAME>
                          <OPENTSX_PRIMARY_CLUSTER_CLIENT_CFG_FILE_NAME>/opentsx-lg/config/mdc_c1.props</OPENTSX_PRIMARY_CLUSTER_CLIENT_CFG_FILE_NAME>
                          <OPENTSX_SHOW_GUI>false</OPENTSX_SHOW_GUI>
                        </env>
                      </build>
                    </image>
                  </images>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <images>
                <image>
                  <alias>OpenTSx-DataGenerator</alias>
                  <name>opentsx/time-series-generator:3.0.0</name>
                  <build>
                    <from>confluentinc/cp-base</from>
                    <assembly>
                      <name>opentsx-lg</name>
                      <descriptorRef>artifact</descriptorRef>
                      <inline>
                        <files>
                          <file>
                            <source>/home/ubuntu/OpenTSx/opentsx-lg/target/opentsx-lg-3.0.0.jar</source>
                            <outputDirectory>./</outputDirectory>
                            <destName>opentsx-lg-3.0.0.jar</destName>
